{% extends 'base.html.twig' %}

{% block title %}Modifier un établissement{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="card shadow border-0">
            <div class="card-header bg-warning text-white text-center">
                <h2 class="mb-0">Modifier l'établissement</h2>
            </div>
            <div class="card-body">

                {# Affiche les erreurs globales (ex: CSRF) #}
                {% for error in form.vars.errors %}
                    <div class="alert alert-danger">{{ error.message }}</div>
                {% endfor %}

                {{ form_start(form) }}

                <div class="row g-3">

                    <div class="col-md-6">
                        {{ form_row(form.appellationOfficiel, {
                            label_attr: {'class': 'form-label fw-bold'},
                            attr: {'class': 'form-control'}
                        }) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(form.denominationPrincipale, {
                            label_attr: {'class': 'form-label fw-bold'},
                            attr: {'class': 'form-control'}
                        }) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(form.secteur, {
                            label_attr: {'class': 'form-label fw-bold'}
                        }) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(form.longitude, {
                            label_attr: {'class': 'form-label fw-bold'},
                            attr: {'class': 'form-control'}
                        }) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(form.latitude, {
                            label_attr: {'class': 'form-label fw-bold'},
                            attr: {'class': 'form-control'}
                        }) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(form.adresse, {
                            label_attr: {'class': 'form-label fw-bold'},
                            attr: {'class': 'form-control'}
                        }) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(form.departement, {
                            label_attr: {'class': 'form-label fw-bold'},
                            attr: {'class': 'form-control'}
                        }) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(form.commune, {
                            label_attr: {'class': 'form-label fw-bold'},
                            attr: {'class': 'form-control'}
                        }) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(form.region, {
                            label_attr: {'class': 'form-label fw-bold'},
                            attr: {'class': 'form-control'}
                        }) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(form.academie, {
                            label_attr: {'class': 'form-label fw-bold'},
                            attr: {'class': 'form-control'}
                        }) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(form.dateOuverture, {
                            label_attr: {'class': 'form-label fw-bold'},
                            attr: {'class': 'form-control'}
                        }) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(form.code_departement, {
                            label_attr: {'class': 'form-label fw-bold'},
                            attr: {'class': 'form-control'}
                        }) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(form.code_region, {
                            label_attr: {'class': 'form-label fw-bold'},
                            attr: {'class': 'form-control'}
                        }) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(form.code_academie, {
                            label_attr: {'class': 'form-label fw-bold'},
                            attr: {'class': 'form-control'}
                        }) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(form.code_commune, {
                            label_attr: {'class': 'form-label fw-bold'},
                            attr: {'class': 'form-control'}
                        }) }}
                    </div>

                    {{ form_row(form._token) }}
                </div>

                <div class="mt-4 text-center">
                    <button type="submit" class="btn btn-success px-4">
                        Mettre à jour
                    </button>
                    <a href="{{ path('app_etablissement') }}" class="btn btn-secondary ms-2">Annuler</a>
                </div>

                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
    </div>
{% endblock %}
