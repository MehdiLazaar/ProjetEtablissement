{% extends 'base.html.twig' %}

{% block title %}Modifier un établissement{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="card shadow border-0">
            <div class="card-header bg-warning text-white text-center">
                <h2 class="mb-0">Modifier l'établissement</h2>
            </div>
            <div class="card-body">
                {% for error in form.vars.errors %}
                    <div class="alert alert-danger">{{ error.message }}</div>
                {% endfor %}

                {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

                <div class="row g-3">
                    {% for field in form %}
                        {% if field.vars.name != '_token' %}
                            <div class="col-md-6">
                                {{ form_label(field, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                                {% for error in field.vars.errors %}
                                    <div class="text-danger small">{{ error.message }}</div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>

                {{ form_row(form._token) }}

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success">
                        Mettre à jour
                    </button>
                    <a href="{{ path('app_etablissement') }}" class="btn btn-secondary ms-2">Annuler</a>
                </div>

                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
    </div>
{% endblock %}